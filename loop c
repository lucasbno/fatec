#include <stdio.h>

int main()
{
    int x = 0;
    float soma, media = 0.0;
    
    printf("Digite quantas temperaturas deseja usar: ");
    scanf("%d", &x);
    
    for (int i = 1; i <= x; i++) {
        float temp = 0;
        printf("Digite a temperatura");
        scanf("%f", &temp);
        
        soma += temp;
        
    }
    
    media = soma / x;
    
    
    printf("%f", media);

    return 0;
}

