#include <stdio.h>
#include <math.h>

int main()
{
    int x = 0;
    float soma = 0.0;
    
    printf("Digite quantos valores deseja usar: ");
    scanf("%d", &x);
    
    for (int i = 1, j = 2; i <= x; i++, j *= 2) {
        printf("%d, %d, %d \n", i,  i + 1, j);
        soma += pow(i, (i + 1) / j);
        printf("%f", soma);
    }
    
    printf("%f", soma);

    return 0;
}
