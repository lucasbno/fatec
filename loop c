#include <stdio.h>

int main()
{
    int x, soma = 0;
    printf("Digite quantos numeros deseja usar");
    scanf("%d", &x);
    
    for (int i = 1; i <= x; i++) {
        int temp = 0;
        printf("Digite o numero");
        scanf("%d", &temp);
        
        if (temp % 2 == 0) {
            soma += temp;
        }
    }
    
    printf("%d", soma);

    return 0;
}

